<?xml version="1.0" encoding="utf-8"?>
<!-- Next Task Widget - Small (2x2) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prochaine tÃ¢che"
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <!-- Task Content -->
    <LinearLayout
        android:id="@+id/task_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Priority Indicator with Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/priority_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/priority_circle" />

            <TextView
                android:id="@+id/priority_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="10sp"
                android:textColor="#6B7280"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <!-- Task Title -->
        <TextView
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ma prochaine tÃ¢che"
            android:textSize="14sp"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="6dp" />

        <!-- Time -->
        <TextView
            android:id="@+id/task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textSize="12sp"
            android:textColor="#3B82F6"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- Category -->
        <TextView
            android:id="@+id/task_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travail"
            android:textSize="11sp"
            android:textColor="#6B7280"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- Duration -->
        <TextView
            android:id="@+id/task_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â±ï¸ 1h 30min"
            android:textSize="11sp"
            android:textColor="#6B7280"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- Location -->
        <TextView
            android:id="@+id/task_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Bureau"
            android:textSize="11sp"
            android:textColor="#6B7280"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨"
            android:textSize="24sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucune tÃ¢che planifiÃ©e"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>
