<?xml version="1.0" encoding="utf-8"?>
<!-- Stats Widget - Medium (4x2) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header with Period -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Statistiques"
            android:textSize="14sp"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/period_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cette semaine"
            android:textSize="11sp"
            android:textColor="#6B7280" />

        <TextView
            android:id="@+id/trend_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Stats Content -->
    <LinearLayout
        android:id="@+id/stats_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Completion Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Taux de complÃ©tion"
                    android:textSize="11sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/completion_rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textSize="16sp"
                    android:textColor="#10B981"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Progress Bar (simplified) -->
            <View
                android:id="@+id/completion_rate_progress"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#10B981"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Tasks Completed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tasks_completed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42"
                        android:textSize="18sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tasks_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/50"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ComplÃ©tÃ©es"
                    android:textSize="10sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Current Streak -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/current_streak_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="18sp"
                    android:textColor="#F59E0B"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/current_streak_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jours"
                    android:textSize="10sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ SÃ©rie"
                    android:textSize="10sp"
                    android:textColor="#6B7280" />

            </LinearLayout>

            <!-- Average Per Day -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/average_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.0"
                    android:textSize="18sp"
                    android:textColor="#3B82F6"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Par jour"
                    android:textSize="10sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Best Streak Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† Meilleure sÃ©rie: "
                android:textSize="10sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/best_streak_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="10sp"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" jours"
                android:textSize="10sp"
                android:textColor="#6B7280" />

        </LinearLayout>

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š"
            android:textSize="32sp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas encore de statistiques"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ComplÃ©tez des tÃ¢ches pour voir vos stats"
            android:textSize="10sp"
            android:textColor="#D1D5DB"
            android:textAlignment="center"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
